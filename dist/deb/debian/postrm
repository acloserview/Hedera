#!/bin/sh

set -e
if [ -f /usr/share/Hedera-theme/files ]; then
    while read _file; do
        if [ -f "$_file" ];then
            rm -f "$_file"
        fi
    done < /usr/share/Hedera-theme/files
fi

if [ -f /usr/share/themes/Hedera/gtk-3.0/gtk.css ];then
	printf "\nremoval failed - Aborting!\n"
	exit 1
fi

if [ -d /usr/share/Hedera-theme ];then
    rm -rf /usr/share/Hedera-theme
fi
printf '\n==> Done!\n'
